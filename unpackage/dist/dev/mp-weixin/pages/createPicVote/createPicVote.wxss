.word_vote {
  padding: 20px;
  padding-bottom: 70px;
}
.word_vote .cover_img .title_tip {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: gray;
  display: flex;
  justify-content: space-between;
}
.word_vote .cover_img .upload_img {
  border-radius: 5px;
  margin-top: 20rpx;
  width: 100%;
  height: 360rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.word_vote .cover_img .upload_img .upload {
  margin: 10rpx;
  background-color: #f4f5f7;
  width: 90%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.word_vote .basic_settings {
  margin-top: 20px;
}
.word_vote .basic_settings .title_tip {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: gray;
  margin-bottom: 10px;
}
.word_vote .basic_settings .settings {
  border-radius: 5px;
  background-color: white;
}
.word_vote .basic_settings .settings .title {
  padding: 10px;
}
.word_vote .basic_settings .settings .title input {
  font-size: 1.3rem;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 15px;
}
.word_vote .basic_settings .settings .explanation {
  padding: 10px;
}
.word_vote .basic_settings .settings .explanation textarea {
  height: 100px;
}
.word_vote .vote_options_settings {
  margin-top: 20px;
}
.word_vote .vote_options_settings .title_tip {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: gray;
  margin-bottom: 10px;
}
.word_vote .vote_options_settings .option_list .option_item {
  margin-top: 10px;
  border-radius: 5px;
  background-color: white;
  padding: 10px;
  display: flex;
}
.word_vote .vote_options_settings .option_add {
  margin-top: 10px;
  border-radius: 5px;
  background-color: white;
  padding: 10px;
  display: flex;
  color: blue;
  font-size: 14px;
}
.word_vote .vote_rules_settings {
  margin-top: 20px;
}
.word_vote .vote_rules_settings .title_tip {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: gray;
  margin-bottom: 10px;
}
.word_vote .vote_rules_settings .rule_list {
  border-radius: 5px;
  background-color: white;
}
.word_vote .vote_rules_settings .rule_list .rule_item {
  display: flex;
  justify-content: space-between;
  padding: 12px;
  border-bottom: 1px solid #e4e4e4;
  font-size: 28rpx;
  align-items: center;
  height: 45rpx;
}
.vote_btn {
  height: 120rpx;
  width: 100%;
  background-color: white;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #e4e4e4;
}
.vote_btn button {
  margin: 10px;
}